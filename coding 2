#include <iostream>
#include <stack>
using namespace std;

int main() {
    string kalimat;
    stack<char> st;

    cout << "Masukkan kalimat: ";
    getline(cin, kalimat);

    // Masukkan semua karakter ke stack
    for (char c : kalimat) {
        st.push(c);
    }

    cout << "Kalimat terbalik: ";
    
    // Pop dan tampilkan
    while (!st.empty()) {
        cout << st.top();
        st.pop();
    }

    cout << endl;
    return 0;
}
